#!/bin/sh

# Check for macOS pbcopy
if command -v pbcopy >/dev/null 2>&1; then
  pbcopy
  # Check for Wayland's wl-copy (by checking for WAYLAND_DISPLAY variable first
  # for a hint, then the command)
elif [ -n "$WAYLAND_DISPLAY" ] && command -v wl-copy >/dev/null 2>&1; then
  wl-copy
  # Check for X11's xclip
elif command -v xclip >/dev/null 2>&1; then
  xclip -selection clipboard
  # Check for X11's xsel
elif command -v xsel >/dev/null 2>&1; then
  xsel -b
else
  echo "Error: No clipboard utility found (pbcopy, wl-copy, xclip, xsel)." >&2
fi
